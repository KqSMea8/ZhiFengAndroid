<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
            app:startDestination="@id/infoFragment"
            android:id="@+id/nav_info">

    <fragment android:id="@+id/infoFragment"
              android:name="com.zf.mart.ui.fragment.info.InfoFragment"
              android:label="个人资料"
              tools:layout="@layout/fragment_info">

        <action
                android:id="@+id/userAction"
                app:destination="@+id/userFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"/>

    </fragment>

    <fragment
            android:id="@+id/userFragment"
            android:label="个人资料"
            tools:layout="@layout/fragment_user"
            android:name="com.zf.mart.ui.fragment.info.UserFragment">

        <action android:id="@+id/changeNameAction"
                app:destination="@id/changeNameFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"/>

    </fragment>

    <fragment android:id="@+id/changeNameFragment"
              android:name="com.zf.mart.ui.fragment.info.ChangeNameFragment"
              android:label="修改名称"
              tools:layout="@layout/fragment_change_name"/>

</navigation>