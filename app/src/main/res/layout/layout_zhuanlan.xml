<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_marginLeft="10dp"
                                   android:layout_marginRight="10dp"
                                   app:cardCornerRadius="5dp"
                                   app:cardElevation="0dp"
                                   android:background="@color/whit"
                                   android:paddingBottom="8dp"
                                   android:layout_marginTop="10dp"
                                   android:id="@+id/me_specail_rl"
                                   android:layout_below="@id/benefit"
                                   android:layout_height="wrap_content">


    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whit">

        <RelativeLayout
                android:id="@+id/me_specail_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的专栏"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlackText"
                    android:textStyle="bold"
                    android:layout_marginLeft="10sp"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看全部专栏"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/ic_arrow"
                    android:drawablePadding="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorSecondText"
                    android:layout_marginRight="11dp"/>

        </RelativeLayout>
        <View
                android:id="@+id/me_line_v3"
                android:layout_below="@id/me_specail_root"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/view_line_color"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
        />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/me_specail_rec"
                android:layout_width="match_parent"
                android:overScrollMode="never"
                android:layout_height="wrap_content"
                android:layout_below="@id/me_line_v3">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>