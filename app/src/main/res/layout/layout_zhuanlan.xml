<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/me_specail_rl"
        android:layout_below="@id/benefit"
        android:background="@drawable/shape_round_whit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/me_specail_root"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的专栏"
                android:textSize="15sp"
                android:textColor="@color/colorBlackText"
                android:textStyle="bold"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看全部专栏"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_arrow"
                android:drawablePadding="5dp"
                android:textSize="12sp"
                android:textColor="@color/colorSecondText"/>

    </RelativeLayout>

    <View
            android:id="@+id/me_line_v3"
            android:layout_below="@id/me_specail_root"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/view_line_color"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/columnRecyclerView"
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"
            android:layout_height="wrap_content"
            android:layout_below="@id/me_line_v3"/>


</RelativeLayout>