<?xml version="1.0" encoding="utf-8"?>


<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@drawable/ic_background"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="24sp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="63dp"
                  android:textColor="@color/colorBlackText"
                  android:text="智丰商城登录"/>

        <RelativeLayout android:layout_width="match_parent"
                        android:background="@drawable/shape_login_input"
                        android:gravity="center_vertical"
                        android:layout_marginTop="40dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_height="40dp">

            <EditText android:layout_width="match_parent" android:layout_height="match_parent"
                      android:drawableLeft="@drawable/mobilephone"
                      android:drawablePadding="10dp"
                      android:background="@null"
                      android:textSize="12sp"
                      android:hint="请输入账号或手机号"/>

        </RelativeLayout>

        <TextView android:layout_width="match_parent"
                  android:layout_height="20dp"
                  android:layout_marginTop="5dp"
                  android:textSize="12sp"
                  android:background="#ffe8cb"
                  android:gravity="center_vertical"
                  android:paddingLeft="10dp"
                  android:textColor="#101010"
                  android:drawablePadding="12dp"
                  android:drawableLeft="@drawable/ic_asterisk"
                  android:text="您的账号不正确"/>

        <RelativeLayout android:layout_width="match_parent"
                        android:background="@drawable/shape_login_input"
                        android:gravity="center_vertical"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_height="40dp">

            <EditText android:layout_width="match_parent" android:layout_height="match_parent"
                      android:drawableLeft="@drawable/password"
                      android:drawablePadding="10dp"
                      android:background="@null"
                      android:textSize="12sp"
                      android:hint="请输入密码"/>

        </RelativeLayout>

        <TextView android:layout_width="match_parent"
                  android:layout_height="20dp"
                  android:layout_marginTop="5dp"
                  android:textSize="12sp"
                  android:background="#ffe8cb"
                  android:gravity="center_vertical"
                  android:paddingLeft="10dp"
                  android:textColor="#101010"
                  android:drawablePadding="12dp"
                  android:drawableLeft="@drawable/ic_asterisk"
                  android:text="您的密码不正确"/>

        <RelativeLayout android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginTop="20dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingRight="10dp"
                        android:layout_height="40dp">

            <EditText
                    android:id="@+id/codeInput"
                    android:layout_width="191dp"
                    android:hint="图像验证码不区分大小"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/shape_login_input"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:id="@+id/code"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_height="match_parent"/>


        </RelativeLayout>

        <TextView
                android:id="@+id/codeHint"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:background="#ffe8cb"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#101010"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/ic_asterisk"
                android:text="您输入的验证码不正确"/>

        <TextView
                android:id="@+id/login"
                android:layout_width="match_parent" android:layout_height="50dp"
                android:background="@drawable/shape_button"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:textColor="@color/whit"
                android:text="登录"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="12dp"
                      android:paddingLeft="27dp"
                      android:paddingRight="27dp"
                      android:orientation="horizontal">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textSize="15sp"
                      android:id="@+id/forgetPwd"
                      android:textColor="@color/colorBlackText"
                      android:text="忘记密码"/>

            <Space android:layout_width="0dp" android:layout_height="1dp"
                   android:layout_weight="1"/>

            <TextView
                    android:id="@+id/register"
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#0051d8"
                    android:layout_height="wrap_content"
                    android:text="注册"/>

        </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                      android:layout_marginTop="32dp"
                      android:orientation="horizontal">

            <View android:layout_width="0dp" android:layout_height="1px"
                  android:layout_weight="1"
                  android:background="@color/colorLine"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
                      android:textSize="15sp"
                      android:textColor="@color/colorBlackText"
                      android:layout_height="wrap_content"
                      android:text="使用第三方登录"/>

            <View android:layout_width="0dp" android:layout_height="1px"
                  android:layout_weight="1"
                  android:background="@color/colorLine"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="40dp"
                      android:layout_marginTop="30dp"
                      android:orientation="horizontal">

            <Space android:layout_width="0dp" android:layout_height="1dp"
                   android:layout_weight="1"/>

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_qq_ring"/>

            <Space android:layout_width="0dp" android:layout_height="1dp"
                   android:layout_weight="1"/>

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/wechat"/>


            <Space android:layout_width="0dp" android:layout_height="1dp"
                   android:layout_weight="1"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_weibo"/>

            <Space android:layout_width="0dp" android:layout_height="1dp"
                   android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>