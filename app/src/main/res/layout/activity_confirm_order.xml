<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:id="@+id/parentLayout"
                android:fitsSystemWindows="true"
                android:background="@color/colorBackground"
                android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar"/>

    <androidx.core.widget.NestedScrollView
            android:layout_above="@+id/settle"
            android:layout_width="match_parent"
            android:layout_below="@+id/myToolBar"
            android:overScrollMode="never"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <include
                    android:id="@+id/addressLayout"
                    layout="@layout/layout_en_order_address"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/goodsRecyclerView"
                    android:overScrollMode="never"
                    android:nestedScrollingEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="match_parent"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_round_whit_big"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="15dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/colorPrimaryText"
                            android:text="配送"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/colorPrimaryText"
                            android:drawableRight="@drawable/down_b"
                            android:drawablePadding="12dp"
                            android:text="第三方快递"/>

                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1px"
                      android:background="@color/colorLine"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="15dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/colorPrimaryText"
                            android:text="优惠券"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/down_b"
                            android:textSize="14sp"
                            android:textColor="@color/colorSecondText"
                            android:drawablePadding="12dp"
                            android:text="暂无可用"/>

                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1px"
                      android:background="@color/colorLine"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="15dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/colorPrimaryText"
                            android:text="红包"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/down_b"
                            android:drawablePadding="12dp"
                            android:textSize="14sp"
                            android:textColor="@color/colorSecondText"
                            android:text="暂无可用"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="20dp"
                          android:layout_marginBottom="35dp"
                          android:paddingRight="25dp"
                          android:orientation="horizontal">

                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:gravity="right"
                          android:textSize="15sp"
                          android:textColor="@color/colorPrimaryText"
                          android:text="合计:"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="15sp"
                          android:textColor="@color/colorPrice"
                          android:text="￥499.0"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

        <TextView
                android:id="@+id/settle"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/colorPrimaryBtn"
                android:gravity="center"
                android:textColor="@color/whit"
                android:layout_alignParentBottom="true"
                android:textSize="15sp"
                android:text="提交订单"/>

</RelativeLayout>