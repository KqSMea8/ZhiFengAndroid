<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/whit"
              android:layout_width="match_parent"
              android:layout_marginTop="10dp"
              android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:paddingTop="5dp"
                  android:paddingBottom="5dp"
                  android:gravity="center_vertical"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:orientation="horizontal">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="11sp"
                  android:textColor="@color/colorBlackText"
                  android:text="2019/02/03  00:25:50"/>

        <Space android:layout_width="0dp" android:layout_height="1dp"
               android:layout_weight="1"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="12sp"
                  android:layout_marginRight="10dp"
                  android:textColor="#f20c0c"
                  android:text="等待买家使用"/>

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/ic_delete"/>

    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/colorBackground"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"/>

    <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent" android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/goodsIcon"
                android:layout_width="80dp"
                android:layout_marginLeft="10dp"
                android:layout_height="80dp"
                android:src="@drawable/pi_picture"/>

        <TextView
                android:id="@+id/goodsName"
                android:layout_width="wrap_content"
                android:layout_marginLeft="13dp"
                android:textSize="12sp"
                android:textColor="@color/colorBlackText"
                android:layout_toRightOf="@+id/goodsIcon"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:maxLines="2"
                android:text="HAODUOYI2018时尚卫衣秋季新品女装 欧美时尚字母印花宽松休闲套头卫衣"/>

        <TextView
                android:id="@+id/goodsSize"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/goodsIcon"
                android:layout_marginLeft="13dp"
                android:layout_below="@+id/goodsName"
                android:textSize="12sp"
                android:layout_marginTop="7dp"
                android:textColor="@color/colorBlackText"
                android:layout_height="wrap_content"
                android:text="颜色:蓝色 尺寸:M码"/>

        <!-- 非实体商品显示截止使用时间 -->
        <TextView
                android:id="@+id/goodsCutTime"
                android:layout_toRightOf="@+id/goodsIcon"
                android:layout_width="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_below="@+id/goodsName"
                android:layout_marginTop="7dp"
                android:textSize="12sp"
                android:visibility="invisible"
                android:textColor="#f11010"
                android:layout_height="wrap_content"
                android:text="截止时间2019年02月31日"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_toRightOf="@+id/goodsIcon"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/goodsName"
                  android:layout_marginTop="30dp"
                  android:textSize="12sp"
                  android:textColor="@color/colorBlackText"
                  android:layout_marginLeft="13dp"
                  android:id="@+id/goodsPrice"
                  android:text="￥256×2"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_alignBottom="@+id/goodsIcon"
                  android:textSize="12sp"
                  android:textColor="#6f6f6f"
                  android:layout_marginRight="10dp"
                  android:text="查看产品使用说明"/>

    </RelativeLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/colorBackground"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="10dp"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="12dp"
                  android:paddingLeft="10dp"
                  android:paddingRight="20dp"
                  android:orientation="horizontal">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="12sp"
                  android:textColor="@color/colorPrimaryText"
                  android:text="欧欧记"/>

        <Space android:layout_width="0dp" android:layout_height="1dp"
               android:layout_weight="1"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="12sp"
                  android:textColor="@color/colorPrimaryText"
                  android:text="共2件"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="12sp"
                  android:textColor="@color/colorPrimaryText"
                  android:layout_marginLeft="10dp"
                  android:text="应付总额"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:textSize="15sp"
                  android:textColor="#f72c0b"
                  android:text="￥256.00"/>

    </LinearLayout>

    <include layout="@layout/layout_order_operation"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>

</LinearLayout>