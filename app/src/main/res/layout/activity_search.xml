<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/whit"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

        <LinearLayout android:layout_width="50dp"
                      android:id="@+id/backLayout"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_height="match_parent">

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/fanhui"/>


        </LinearLayout>

        <RelativeLayout android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_search_input"
                        android:layout_gravity="center_vertical"
                        android:layout_height="35dp">

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:layout_marginLeft="15dp"
                       android:id="@+id/searchIcon"
                       android:layout_centerVertical="true"
                       android:src="@drawable/search"/>

            <EditText android:layout_width="match_parent"
                      android:layout_toRightOf="@+id/searchIcon"
                      android:layout_marginLeft="12dp"
                      android:textColor="@color/colorPrimaryText"
                      android:textSize="12sp"
                      android:layout_height="match_parent"
                      android:background="@null"
                      android:hint="商品 店铺"/>

        </RelativeLayout>

        <LinearLayout
                android:id="@+id/searchLayout"
                android:layout_width="50dp" android:layout_height="match_parent"
                android:gravity="center">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textSize="15sp"
                      android:textColor="@color/colorBlackText"
                      android:text="搜索"/>

        </LinearLayout>


    </LinearLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textSize="16sp"
              android:layout_marginTop="34dp"
              android:layout_marginLeft="10dp"
              android:textColor="#111111"
              android:text="热门搜索"/>


    <!-- 流式布局做历史搜索 -->
    <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/hotLayout"
            android:layout_width="match_parent"
            app:max_select="1"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textSize="16sp"
              android:layout_marginTop="20dp"
              android:layout_marginLeft="10dp"
              android:textColor="#111111"
              android:text="搜索发现"/>

    <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/discoveryLayout"
            android:layout_width="match_parent"
            app:max_select="1"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"/>


</LinearLayout>