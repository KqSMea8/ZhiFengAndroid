<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="5dp"

>

    <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/classify_right_shop_item2_img"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:src="@mipmap/clsssify_content_item_g3"
            android:scaleType="fitXY"
            app:riv_corner_radius="5dp"
            app:riv_mutate_background="true"
            app:riv_oval="false"

    />
    <TextView
            android:id="@+id/classify_right_shop_item2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/classify_right_shop_item2_img"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="14dp"
            android:textSize="14sp"
            android:textColor="@color/colorifyitemText"
            android:text="春秋穿搭必备指南"
    />
    <ImageView
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:layout_below="@id/classify_right_shop_item2_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow_b"

    />
    <LinearLayout
            android:layout_alignLeft="@id/classify_right_shop_item2_name"
            android:layout_below="@id/classify_right_shop_item2_name"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#e51c23"
                android:textSize="10sp"
                android:text="21"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="#666666"
                android:textSize="10sp"
                android:text="款商品"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:textColor="#e51c23"
                android:textSize="10sp"
                android:text="3.5万"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:layout_marginLeft="4dp"
                android:textSize="10sp"
                android:text="人购买"
        />
    </LinearLayout>


</RelativeLayout>
