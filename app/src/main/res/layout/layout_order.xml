<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_marginLeft="10dp"
                                   android:layout_marginRight="10dp"
                                   app:cardCornerRadius="5dp"
                                   android:id="@+id/me_orld_root"
                                   android:layout_below="@id/me_info_root"
                                   app:cardElevation="0dp"
                                   android:background="@color/whit"
                                   android:layout_marginTop="10dp"
                                   android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <RelativeLayout
                android:id="@+id/allOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的订单"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_tv_color"
                    android:layout_marginLeft="11dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="查看全部订单"
                    android:drawableRight="@drawable/ic_arrow"
                    android:drawablePadding="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorSecondText"
                    android:layout_marginRight="11dp"/>
            <!--<ImageView-->
            <!--android:layout_width="@dimen/dp_10"-->
            <!--android:layout_height="@dimen/dp_10"-->
            <!--android:src="@mipmap/icon_right_next"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:layout_marginRight="@dimen/dp_10"-->
            <!--/>-->
        </RelativeLayout>

        <View
                android:id="@+id/me_line_v0"
                android:layout_below="@id/allOrder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/view_line_color"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/me_line_v0"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
        >

            <RelativeLayout
                    android:id="@+id/waitPay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                <ImageView
                        android:id="@+id/me_payment_iv"
                        style="@style/me_orld_iv_style"
                        android:src="@drawable/ic_pending"
                        android:layout_centerHorizontal="true"/>

                <TextView
                        android:id="@+id/me_payment_num"
                        android:text="99+"
                        style="@style/me_orld_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待付款"
                        android:layout_below="@id/me_payment_iv"
                        android:textColor="@color/colorSecondText"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textSize="12sp"/>

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/waiSend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                <ImageView
                        android:id="@+id/me_cargo_iv"
                        style="@style/me_orld_iv_style"
                        android:src="@drawable/tobeevaluated2"
                        android:layout_centerHorizontal="true"/>
                <TextView
                        android:id="@+id/me_cargo_num"
                        android:text="18"
                        style="@style/me_orld_style"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待发货"
                        android:layout_below="@id/me_cargo_iv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColor="@color/colorSecondText"
                        android:textSize="12sp"/>

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/waitTake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
            >
                <ImageView
                        android:id="@+id/me_receive_cargo_iv"
                        style="@style/me_orld_iv_style"
                        android:src="@drawable/ic_tobeshipped"
                        android:layout_centerHorizontal="true"
                />
                <TextView
                        android:id="@+id/me_receive_cargo_num"
                        android:text="88"
                        style="@style/me_orld_style"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待收货"
                        android:layout_below="@id/me_receive_cargo_iv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColor="@color/colorSecondText"
                        android:textSize="12sp"
                />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/waitEva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
            >
                <ImageView
                        android:id="@+id/me_evaluatet_iv"
                        style="@style/me_orld_iv_style"
                        android:src="@drawable/ic_pendingreceipt"
                        android:layout_centerHorizontal="true"
                />
                <TextView
                        android:id="@+id/me_evaluate_num"
                        android:text="9"
                        style="@style/me_orld_style"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待评价"
                        android:layout_below="@id/me_evaluatet_iv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColor="@color/colorSecondText"
                        android:textSize="12sp"
                />
            </RelativeLayout>
            <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--&gt;-->
            <!--<ImageView-->
            <!--android:id="@+id/me_after_iv"-->
            <!--style="@style/me_orld_iv_style"-->
            <!--android:src="@mipmap/mm1"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--/>-->
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="售后"-->
            <!--android:layout_below="@id/me_after_iv"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="@dimen/dp_5"-->
            <!--android:textSize="@dimen/sp_13"-->
            <!--/>-->
            <!--</RelativeLayout>-->


        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>