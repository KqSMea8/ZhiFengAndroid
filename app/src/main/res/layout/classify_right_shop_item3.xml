<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="5dp">
    <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/classify_right_shop_item3_img"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:src="@mipmap/img_3"
            android:scaleType="fitXY"
            app:riv_corner_radius="5dp"
            app:riv_mutate_background="true"
            app:riv_oval="false"

    />
    <TextView
           android:id="@+id/classify_right_shop_item3_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/classify_right_shop_item3_img"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="14dp"
            android:textSize="14sp"
            android:textColor="@color/colorifyitemText"
            android:text="嫩肤清莹露160ml"
    />
    <LinearLayout
            android:id="@+id/classify_right_shop_item3_ly"
            android:layout_below="@id/classify_right_shop_item3_name"
            android:layout_alignLeft="@id/classify_right_shop_item3_name"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="10sp"
                android:text="￥"
        />
        <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="#353535"
                android:textSize="13sp"
                android:text="560"
        />

    </LinearLayout>
    <ImageView
            android:layout_below="@id/classify_right_shop_item3_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/shop_tag"
    />
</RelativeLayout>
