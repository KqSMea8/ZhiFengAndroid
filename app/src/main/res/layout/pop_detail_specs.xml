<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="275dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">
        <ImageView
                android:id="@+id/goods_img"
                android:src="@drawable/activity"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        <TextView
                android:id="@+id/goodsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/goods_img"
                android:layout_marginLeft="10dp"
                android:text="华为笔记本"/>
        <TextView
                android:id="@+id/goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/goodsName"
                android:layout_below="@+id/goodsName"
                android:layout_marginTop="10dp"
                android:text="3499.00"/>
        <TextView
                android:id="@+id/goods_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/goods_price"
                android:layout_below="@+id/goods_price"
                android:layout_marginTop="10dp"
                android:text="剩余库存：20"
        />
    </RelativeLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"/>
    <LinearLayout
            android:orientation="horizontal"
            android:background="@color/whit"
            android:layout_width="wrap_content"
            android:layout_height="30dp">
        <TextView
                android:id="@+id/del_btn"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="-"/>
        <EditText
                android:id="@+id/card_number"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="number"
                android:gravity="center"
                android:maxLength="5"
                android:text="1"
                android:textSize="9sp">
            <requestFocus/>
        </EditText>
        <TextView
                android:id="@+id/add_btn"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/specs_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <TextView
            android:id="@+id/specs_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="#E29797"
            android:gravity="center"
            android:text="确认加入购物车"/>
</LinearLayout>