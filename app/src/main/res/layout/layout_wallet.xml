<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/shape_round_whit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/me_wallet_rl"
        android:layout_below="@id/me_orld_root">

    <RelativeLayout
            android:id="@+id/myWallet"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的钱包"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlackText"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="查看钱包"
                android:drawableRight="@drawable/ic_arrow"
                android:drawablePadding="5dp"
                android:textSize="12sp"
                android:textColor="@color/colorSecondText"
                android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
            android:id="@+id/me_line_v"
            android:layout_below="@id/myWallet"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/view_line_color"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    <LinearLayout
            android:layout_below="@id/me_line_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

        <Space android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="1"/>

        <LinearLayout
                android:id="@+id/integralLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/integral"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/colorPrimaryText"
                      android:textSize="12sp"
                      android:layout_marginTop="3dp"
                      android:text="积分"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="15sp"
                      android:textColor="#fe2306"
                      android:text="200"/>

        </LinearLayout>

        <Space android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="2"/>

        <LinearLayout
                android:id="@+id/discountLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_coupon"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/colorPrimaryText"
                      android:textSize="12sp"
                      android:layout_marginTop="3dp"
                      android:text="优惠券"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="15sp"
                      android:textColor="#fe2306"
                      android:text="200"/>

        </LinearLayout>

        <Space android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="1"/>

    </LinearLayout>


</RelativeLayout>