<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@color/whit"
              android:orientation="horizontal">

    <CheckBox android:layout_width="0dp" android:layout_height="match_parent"
              android:layout_weight="1"
              android:button="@null"
              android:gravity="center"
              android:textSize="11sp"
              android:paddingBottom="2dp"
              android:textColor="#666666"
              android:paddingTop="6dp"
              android:text="收藏"
              android:drawableTop="@drawable/selector_collection"/>

    <CheckBox android:layout_width="0dp" android:layout_height="match_parent"
              android:layout_weight="1"
              android:button="@null"
              android:gravity="center"
              android:textSize="11sp"
              android:textColor="#666666"
              android:paddingTop="6dp"
              android:paddingBottom="2dp"
              android:text="客服"
              android:drawableTop="@drawable/kefu"/>

    <!--<Space android:layout_width="0dp" android:layout_height="1dp"-->
    <!--android:layout_weight="1"/>-->

    <LinearLayout android:layout_width="140dp"
                  android:background="#f3b53f"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <TextView android:layout_width="match_parent"
                  android:gravity="bottom|center_horizontal"
                  android:textColor="@color/whit"
                  android:textSize="15dp"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:text="￥256"/>

        <TextView android:layout_width="match_parent"
                  android:gravity="top|center_horizontal"
                  android:textColor="@color/whit"
                  android:textSize="15dp"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:text="加入购物车"/>

    </LinearLayout>

    <LinearLayout android:layout_width="140dp"
                  android:background="#ff5722"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <TextView android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:textColor="@color/whit"
                  android:textSize="15dp"
                  android:gravity="bottom|center_horizontal"
                  android:text="￥123"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:textColor="@color/whit"
                  android:textSize="15dp"
                  android:gravity="top|center_horizontal"
                  android:text="发起拼单"/>

    </LinearLayout>

</LinearLayout>