<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/shape_detail_bg"
        android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
            app:riv_corner_radius="5dp"
            android:id="@+id/home_recommend_iv"
            android:layout_width="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:layout_height="150dp"
            android:background="@color/colorBackground"/>

    <TextView
            android:id="@+id/goodsName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginRight="12dp"
            android:textColor="#151515"
            android:textSize="12sp"
            android:text="荣耀8X64G吃鸡神奇"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="12dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/rmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textSize="11sp"
                    android:textColor="@color/colorPrice"
                    android:text="￥"/>

            <TextView
                    android:id="@+id/home_recommend_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrice"
                    android:text="1399.00"/>

        </LinearLayout>


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="13sp"
                  android:textColor="@color/colorBlackText"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="12dp"
                  android:drawableRight="@drawable/arrow_b"
                  android:drawablePadding="2dp"
                  android:text="MODO专营店"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="8sp"
                      android:textColor="@color/colorBlackText"
                      android:id="@+id/evaluate"
                      android:text="97.2%好评"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="8sp"
                      android:textColor="@color/colorBlackText"
                      android:layout_marginLeft="8dp"
                      android:id="@+id/sellNum"
                      android:text="销量:10万"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="8sp"
                      android:textColor="@color/colorBlackText"
                      android:layout_marginLeft="8dp"
                      android:id="@+id/havePay"
                      android:text="已付款:4200+"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>