<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/colorBackground"
                android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:id="@+id/scrollView"
            android:layout_above="@+id/operation"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="380dp">

                <androidx.viewpager.widget.ViewPager
                        android:id="@+id/bannerViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/bannerNum"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:textColor="@color/whit"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="7dp"
                        android:background="@drawable/shape_detail_num"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="3dp"
                        android:textSize="12sp"
                        android:paddingBottom="3dp"
                        android:layout_marginRight="12dp"
                        android:text="1/2"/>

            </RelativeLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="44dp"
                          android:paddingLeft="25dp"
                          android:paddingRight="25dp"
                          android:gravity="center_vertical"
                          android:background="@color/whit"
                          android:orientation="horizontal">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textSize="14sp"
                          android:textColor="@color/colorPrice"
                          android:text="小团"/>

                <Space android:layout_width="0dp" android:layout_height="1dp"
                       android:layout_weight="1"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textSize="14sp"
                          android:textColor="@color/colorPrice"
                          android:text="距离结束还有"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textSize="14sp"
                          android:textColor="@color/colorPrice"
                          android:layout_marginLeft="3dp"
                          android:text="00:01:00"/>

            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1px"
                  android:background="@color/colorBackground"/>

            <RelativeLayout android:layout_width="match_parent"
                            android:background="@color/whit"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/goodsName"
                          android:textSize="15sp"
                          android:textColor="@color/colorPrimaryText"
                          android:maxLines="2"
                          android:text="Dior/迪奥 黑色羊毛真丝排扣夹克"/>

                <TextView android:layout_width="wrap_content" android:layout_height="25dp"
                          android:id="@+id/currentPrice"
                          android:gravity="center"
                          android:layout_below="@+id/goodsName"
                          android:layout_marginTop="5dp"
                          android:textSize="13sp"
                          android:paddingLeft="10dp"
                          android:background="@color/colorBtnCheck"
                          android:textColor="@color/whit"
                          android:paddingTop="2dp"
                          android:paddingRight="10dp"
                          android:paddingBottom="2dp"
                          android:text="￥250起"/>

                <TextView android:layout_width="wrap_content" android:layout_height="25dp"
                          android:id="@+id/originalPrice"
                          android:layout_toRightOf="@+id/currentPrice"
                          android:paddingLeft="10dp"
                          android:gravity="center"
                          android:textSize="13sp"
                          android:layout_alignTop="@+id/currentPrice"
                          android:paddingTop="2dp"
                          android:background="@drawable/shape_primary_round"
                          android:textColor="@color/colorSecondText"
                          android:paddingRight="10dp"
                          android:paddingBottom="2dp"
                          android:text="￥250起"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_below="@+id/currentPrice"
                          android:id="@+id/riderTxt"
                          android:layout_marginTop="10dp"
                          android:textSize="10sp"
                          android:textColor="@color/colorSecondText"
                          android:text="运费"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_alignTop="@+id/riderTxt"
                          android:layout_toRightOf="@+id/riderTxt"
                          android:textSize="10sp"
                          android:textColor="@color/colorSecondText"
                          android:text="免运费"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_alignParentRight="true"
                          android:textSize="13sp"
                          android:textColor="@color/colorSecondText"
                          android:layout_centerVertical="true"
                          android:text="已团20件"/>

            </RelativeLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:paddingTop="12dp"
                              android:paddingBottom="12dp"
                              android:orientation="horizontal">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textSize="15sp"
                              android:textColor="@color/colorPrimaryText"
                              android:text="评价"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textSize="12sp"
                              android:textColor="@color/colorPrice"
                              android:layout_marginLeft="10dp"
                              android:text="好评"/>

                    <Space android:layout_width="0dp" android:layout_height="1dp"
                           android:layout_weight="1"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textSize="12sp"
                              android:textColor="@color/colorPrice"
                              android:text="共200+评论"/>

                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1px"
                      android:background="@color/colorBackground"/>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="horizontal">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:background="#ffe5e3"
                              android:paddingLeft="10dp"
                              android:paddingRight="10dp"
                              android:textSize="10sp"
                              android:textColor="@color/colorSecondText"
                              android:paddingTop="2dp"
                              android:paddingBottom="2dp"
                              android:text="好评(200+)"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:background="#ffe5e3"
                              android:paddingLeft="10dp"
                              android:paddingRight="10dp"
                              android:textSize="10sp"
                              android:textColor="@color/colorSecondText"
                              android:paddingTop="2dp"
                              android:paddingBottom="2dp"
                              android:text="中评(0)"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:background="#ffe5e3"
                              android:paddingLeft="10dp"
                              android:paddingRight="10dp"
                              android:textSize="10sp"
                              android:textColor="@color/colorSecondText"
                              android:paddingTop="2dp"
                              android:paddingBottom="2dp"
                              android:text="差评(0)"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:background="#ffe5e3"
                              android:paddingLeft="10dp"
                              android:paddingRight="10dp"
                              android:textSize="10sp"
                              android:textColor="@color/colorSecondText"
                              android:paddingTop="2dp"
                              android:paddingBottom="2dp"
                              android:text="晒单(0)"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <include
            android:layout_width="match_parent"
            app:layout_collapseMode="pin"
            android:layout_height="44dp"
            layout="@layout/layout_detail_head"/>


</RelativeLayout>