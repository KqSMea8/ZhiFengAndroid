<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/colorBackground"
              android:layout_height="match_parent">

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_marginLeft="15dp"
                                       android:layout_marginTop="10dp"
                                       android:layout_marginRight="15dp"
                                       android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:paddingLeft="15dp"
                          android:paddingRight="15dp"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_marginTop="15dp"
                          android:layout_marginBottom="15dp"
                          android:textSize="14sp"
                          android:textColor="@color/colorSecondText"
                          android:text="收货人:"/>

                <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_marginLeft="24dp"
                          android:singleLine="true"
                          android:background="@null"
                          android:textColor="@color/colorPrimaryText"
                          android:textSize="14sp"
                          android:text="张明"/>

            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1px"
                  android:background="@color/colorBackground"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:paddingLeft="15dp"
                          android:paddingRight="15dp"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_marginTop="15dp"
                          android:layout_marginBottom="15dp"
                          android:textSize="14sp"
                          android:textColor="@color/colorSecondText"
                          android:text="手机号码:"/>

                <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_marginLeft="24dp"
                          android:singleLine="true"
                          android:background="@null"
                          android:textColor="@color/colorPrimaryText"
                          android:textSize="14sp"
                          android:text="1023655221"/>

            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1px"
                  android:background="@color/colorBackground"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:paddingLeft="15dp"
                          android:paddingRight="15dp"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_marginTop="15dp"
                          android:layout_marginBottom="15dp"
                          android:textSize="14sp"
                          android:textColor="@color/colorSecondText"
                          android:text="所在地区:"/>

                <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_marginLeft="24dp"
                          android:singleLine="true"
                          android:background="@null"
                          android:textColor="@color/colorPrimaryText"
                          android:textSize="14sp"
                          android:text="广东省白云区"/>

            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1px"
                  android:background="@color/colorBackground"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:paddingLeft="15dp"
                          android:paddingRight="15dp"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_marginTop="15dp"
                          android:layout_marginBottom="15dp"
                          android:textSize="14sp"
                          android:textColor="@color/colorSecondText"
                          android:text="详细地址:"/>

                <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_marginLeft="24dp"
                          android:singleLine="true"
                          android:background="@null"
                          android:textColor="@color/colorPrimaryText"
                          android:textSize="14sp"
                          android:text="桃园素材包装"/>

            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1px"
                  android:background="@color/colorBackground"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:paddingLeft="15dp"
                          android:paddingRight="15dp"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_marginTop="15dp"
                          android:layout_marginBottom="15dp"
                          android:textSize="14sp"
                          android:textColor="@color/colorSecondText"
                          android:text="地址标签:"/>

                <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_marginLeft="24dp"
                          android:singleLine="true"
                          android:background="@null"
                          android:textColor="@color/colorPrimaryText"
                          android:textSize="14sp"
                          android:text="家"/>

            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1px"
                  android:background="@color/colorBackground"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:paddingLeft="15dp"
                          android:paddingRight="15dp"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_marginTop="15dp"
                          android:layout_marginBottom="15dp"
                          android:textSize="14sp"
                          android:textColor="@color/colorSecondText"
                          android:text="设置默认地址(每次下单会使用该地址)"/>

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="24dp"
                           android:background="@drawable/selector_address_btn"/>

            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1px"
                  android:background="@color/colorBackground"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/confirm"
            android:layout_width="340dp" android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/whit"
            android:textSize="15sp"
            android:background="@drawable/shape_button"
            android:layout_marginTop="20dp"
            android:text="确认"/>

</LinearLayout>