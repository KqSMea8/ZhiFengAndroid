<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/home_ms_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@id/home_head_line_root"
        android:background="@color/whit">

    <TextView
            android:id="@+id/home_ms_mstv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="智丰秒杀"
            android:textColor="@color/colorPrice"
            android:textSize="15sp"/>

    <TextView
            android:id="@+id/home_ms_mstv1"
            android:layout_width="wrap_content"
            android:layout_alignTop="@+id/home_ms_mstv"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/home_ms_mstv"
            android:text="剩下时间"
            android:textColor="@color/colorPrimaryText"
            android:textSize="15sp"/>

    <TextView
            android:id="@+id/countDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_alarmclock"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/home_ms_mstv"
            android:textColor="@color/colorPrice"
            android:drawablePadding="3dp"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:text="1:25:30"/>

    <TextView
            android:id="@+id/action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryText"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:gravity="center_vertical"
            android:layout_alignBottom="@+id/home_ms_mstv"
            android:layout_alignTop="@+id/home_ms_mstv"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/ic_arrow"
            android:drawablePadding="5dp"
            android:text="更多好货"
            android:textSize="12sp"/>

    <View
            android:id="@+id/home_ms_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/home_ms_mstv"
            android:background="@color/colorLine"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/secKillRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:layout_below="@+id/home_ms_line"
            android:layout_marginTop="5dp"/>

</RelativeLayout>
