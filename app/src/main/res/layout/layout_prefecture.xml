<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/whit"
              android:paddingBottom="10dp"
              android:paddingTop="10dp"
              android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="1"
                  android:paddingLeft="12dp"
                  android:paddingRight="12dp"
                  android:orientation="horizontal">

        <LinearLayout android:layout_width="80dp" android:layout_height="wrap_content"
                      android:gravity="center_horizontal"
                      android:orientation="vertical">

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/choiceness"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="3dp"
                      android:text="精选"/>

        </LinearLayout>

        <Space android:layout_width="0dp" android:layout_height="1dp"
               android:layout_weight="1"/>


        <LinearLayout android:layout_width="80dp" android:layout_height="wrap_content"
                      android:gravity="center_horizontal"
                      android:orientation="vertical">

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/ic_live"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="3dp"
                      android:text="视频直播"/>

        </LinearLayout>

        <Space android:layout_width="0dp" android:layout_height="1dp"
               android:layout_weight="1"/>

        <LinearLayout android:layout_width="80dp" android:layout_height="wrap_content"
                      android:gravity="center_horizontal"
                      android:orientation="vertical">

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/ic_signin"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="3dp"
                      android:text="签到"/>

        </LinearLayout>

        <Space android:layout_width="0dp" android:layout_height="1dp"
               android:layout_weight="1"/>


        <LinearLayout android:layout_width="80dp" android:layout_height="wrap_content"
                      android:gravity="center_horizontal"
                      android:orientation="vertical">

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/activity"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="3dp"
                      android:text="活动专区"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="1"
                  android:layout_marginTop="10dp"
                  android:paddingLeft="12dp"
                  android:paddingRight="12dp"
                  android:orientation="horizontal">

        <LinearLayout android:layout_width="80dp" android:layout_height="wrap_content"
                      android:gravity="center_horizontal"
                      android:orientation="vertical">

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/ic_beauty"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="3dp"
                      android:text="美容专区"/>

        </LinearLayout>

        <Space android:layout_width="0dp" android:layout_height="1dp"
               android:layout_weight="1"/>


        <LinearLayout android:layout_width="80dp" android:layout_height="wrap_content"
                      android:gravity="center_horizontal"
                      android:orientation="vertical">

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/ic_paihang"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="3dp"
                      android:text="佣金排行榜"/>

        </LinearLayout>

        <Space android:layout_width="0dp" android:layout_height="1dp"
               android:layout_weight="1"/>

        <LinearLayout android:layout_width="80dp" android:layout_height="wrap_content"
                      android:gravity="center_horizontal"
                      android:orientation="vertical">

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/ic_sc"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="3dp"
                      android:text="素材区"/>

        </LinearLayout>

        <Space android:layout_width="0dp" android:layout_height="1dp"
               android:layout_weight="1"/>


        <LinearLayout android:layout_width="80dp" android:layout_height="wrap_content"
                      android:gravity="center_horizontal"
                      android:orientation="vertical">

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/ic_game"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="3dp"
                      android:text="小游戏"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>