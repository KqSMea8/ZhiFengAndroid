<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:background="@color/whit"
        android:orientation="vertical">


    <RelativeLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:paddingTop="3dp"
                  android:paddingBottom="3dp">

        <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrice"
                android:layout_marginLeft="10dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_gravity="center_vertical"
                android:paddingTop="1dp"
                android:gravity="center_vertical"
                android:textSize="11sp"
                android:paddingBottom="1dp"
                android:background="@drawable/shape_round_red"
                android:text="自营"/>

        <TextView
                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/label"
                android:textSize="14sp"
                android:textColor="@color/colorBlackText"
                android:layout_marginLeft="8dp"
                android:text="Apple/苹果 iphone XR"/>


    </RelativeLayout>
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:id="@+id/goods_remark"
            android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="13sp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_marginTop="20dp"
              android:textColor="@color/colorPrice"
              android:text="商品介绍"/>
    <LinearLayout
            android:id="@+id/label_ly"
            android:background="@drawable/shape_round_red"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="100dp"

            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrice"
                android:textSize="11sp"
                android:text="距离秒杀开始"/>
        <TextView
                android:id="@+id/label_time"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/colorPrice"
                android:textSize="11sp"
                android:text="21:23:11:22"/>

    </LinearLayout>
</RelativeLayout>



    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:layout_marginTop="15dp"
                  android:orientation="horizontal">
        <TextView
                android:id="@+id/label_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textColor="#e60b30"
                android:visibility="gone"
                android:text="秒杀价"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="9sp"
                  android:textColor="#e60b30"
                  android:text="￥"/>

        <TextView
                android:id="@+id/shop_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textColor="#e60b30"
                android:layout_marginLeft="3dp"
                android:text="599.0"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="9sp"
                  android:layout_marginLeft="25dp"
                  android:textColor="@color/colorSecondText"
                  android:text="市场价格"/>

        <TextView
                android:id="@+id/market_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondText"
                android:layout_marginLeft="2dp"
                android:textSize="9sp"
                android:text="￥559.0"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:layout_marginTop="10dp"
                  android:orientation="horizontal">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="9sp"
                  android:textColor="@color/colorSecondText"
                  android:text="销量："/>

        <TextView
                android:id="@+id/virtual_sales_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:textColor="@color/colorSecondText"
                android:text="1W+"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="9sp"
                  android:textColor="@color/colorSecondText"
                  android:layout_marginLeft="20dp"
                  android:text="当前库存"/>

        <TextView
                android:id="@+id/store_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:textColor="@color/colorSecondText"
                android:text="540+件"/>

    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1px"
          android:layout_marginTop="15dp"
          android:background="@color/colorLine"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:paddingLeft="10dp"
                  android:layout_marginTop="10dp"
                  android:paddingRight="10dp"
                  android:orientation="horizontal">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="13sp"
                  android:textStyle="bold"
                  android:textColor="@color/colorBlackText"
                  android:text="配送"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginLeft="23dp"
                  android:textSize="13sp"
                  android:textStyle="bold"
                  android:textColor="@color/colorBlackText"
                  android:text="至"/>

        <TextView
                android:id="@+id/goods_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/arrow_b"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlackText"
                android:layout_marginLeft="3dp"
                android:text="请选择配送地区"/>
    </LinearLayout>


    <View android:layout_width="match_parent" android:layout_height="1px"
          android:layout_marginTop="15dp"
          android:background="@color/colorLine"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:paddingLeft="10dp"
                  android:layout_marginTop="10dp"
                  android:paddingRight="10dp"
                  android:orientation="horizontal">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="13sp"
                  android:textStyle="bold"
                  android:textColor="@color/colorBlackText"
                  android:text="运费"/>


        <TextView
                android:id="@+id/fare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/arrow_b"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlackText"
                android:layout_marginLeft="23dp"
                android:text="免运费"/>
    </LinearLayout>

