<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/whit"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
                app:riv_corner_radius="5dp"
                android:id="@+id/goodsIcon"
                android:layout_width="100dp"
                android:layout_marginLeft="10dp"
                android:background="@color/colorBackground"
                android:layout_height="100dp" />

        <TextView
                android:id="@+id/goodsName"
                android:layout_width="wrap_content"
                android:layout_marginLeft="13dp"
                android:textSize="12sp"
                android:textColor="@color/colorBlackText"
                android:layout_toRightOf="@+id/goodsIcon"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:maxLines="2"
                android:text="HAODUOYI2018时尚卫衣秋季新品女装 欧美时尚字母印花宽松休闲套头卫衣"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:layout_above="@+id/shopName"
                      android:layout_alignLeft="@+id/goodsName"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textSize="11sp"
                      android:textColor="#d21018"
                      android:text="￥"/>

            <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="17sp"
                      android:textColor="#d21018"
                      android:text="399.0"/>

        </LinearLayout>

        <TextView
                android:id="@+id/shopName"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/goodsIcon"
                android:layout_marginLeft="13dp"
                android:textSize="13sp"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/evaluate"
                android:drawableRight="@drawable/arrow_b"
                android:drawablePadding="5dp"
                android:textColor="@color/colorBlackText"
                android:layout_height="wrap_content"
                android:text="MODA专营店"/>


        <TextView android:layout_width="wrap_content"
                  android:layout_toRightOf="@+id/goodsIcon"
                  android:layout_height="wrap_content"
                  android:layout_alignBottom="@+id/goodsIcon"
                  android:textSize="12sp"
                  android:textColor="@color/colorBlackText"
                  android:layout_marginLeft="13dp"
                  android:id="@+id/evaluate"
                  android:text="97.2%好评"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_toRightOf="@+id/evaluate"
                  android:layout_height="wrap_content"
                  android:layout_alignBottom="@+id/goodsIcon"
                  android:layout_marginTop="30dp"
                  android:textSize="12sp"
                  android:textColor="@color/colorBlackText"
                  android:layout_marginLeft="13dp"
                  android:id="@+id/sellNum"
                  android:text="销量:10万"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_toRightOf="@+id/sellNum"
                  android:layout_height="wrap_content"
                  android:layout_alignBottom="@+id/goodsIcon"
                  android:layout_marginTop="30dp"
                  android:textSize="12sp"
                  android:textColor="@color/colorBlackText"
                  android:layout_marginLeft="13dp"
                  android:id="@+id/havePay"
                  android:text="已付款:4200+"/>
        <!--<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignBottom="@+id/goodsIcon"-->
        <!--android:textSize="12sp"-->
        <!--android:textColor="#6f6f6f"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:text="查看产品使用说明"/>-->

    </RelativeLayout>

    <!--<View android:layout_width="match_parent"-->
          <!--android:layout_height="1px"-->
          <!--android:background="@color/colorLine"/>-->

</LinearLayout>